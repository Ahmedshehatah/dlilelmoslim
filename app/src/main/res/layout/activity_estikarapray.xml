<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    android:paddingLeft="10dp"
    android:id="@+id/back1"
    android:paddingRight="10dp"
    android:paddingTop="30dp"
    tools:context=".estikarapray">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtinout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="لأسْتَغْفِرُ اللهَ وَأتُوبُ إلَيْهِ   "
                android:textColor="@color/txt"
                android:textSize="@dimen/dima" />

            <LinearLayout
                android:id="@+id/yx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtreapetnuminout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg1_style"
                    android:gravity="right"
                    android:paddingRight="2dp"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="@dimen/dima" />

                <TextView
                    android:id="@+id/txtreapetinout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg1_style"
                    android:gravity="center"
                    android:text="التكرار"
                    android:textColor="#fff"
                    android:textSize="@dimen/dima" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:visibility="invisible"
                android:id="@+id/size"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>